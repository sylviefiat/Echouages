<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_jforms/models/fields">

		<field name="search_search"
				listKey="id"
				labelKey="username"
				type="cksearch"
				placeholder="JFORMS_FILTER_NULL_CREATED_BY_USERNAME"
				label="JFORMS_JSEARCH_CREATED_BY_USERNAME"
				class="element-search search-query"/>

		<field name="filter_status"
				listKey="value"
				labelKey="text"
				type="ckcombo"
				submit="true"
				nullLabel="JFORMS_FILTER_NULL_STATUS"
				class="span-2 element-filter"
				label="JFORMS_JSEARCH_STATUS"/>

		<field name="filter_payment_status"
				listKey="value"
				labelKey="text"
				type="ckcombo"
				submit="true"
				nullLabel="JFORMS_FILTER_NULL_PAYMENT_STATUS"
				class="span-2 element-filter"
				label="JFORMS_JSEARCH_PAYMENT_STATUS"/>

		<field name="filter_creation_date_from"
				placeholder="JFORMS_FILTER_CREATION_DATE_FROM"
				type="ckcalendar"
				submit="true"
				format="d-m-Y H:i:s"
				label="JFORMS_JSEARCH_CREATION_DATE"
				class="element-filter input-small"/>

		<field name="filter_creation_date_to"
				placeholder="JFORMS_FILTER_CREATION_DATE_TO"
				type="ckcalendar"
				submit="true"
				format="d-m-Y H:i:s"
				label="JFORMS_JSEARCH_CREATION_DATE"
				class="element-filter input-small"/>

		<field name="filter_form_id"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				submit="true"
				nullLabel="JFORMS_FILTER_NULL_FORM_NAME"
				class="span-2 element-filter"
				label="JFORMS_JSEARCH_FORM_NAME"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"/>
	</fieldset>

</form>