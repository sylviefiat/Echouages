<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="default.filters"
	addfieldpath="/administrator/components/com_jforms/models/fields">

		<field name="search_search"
				type="cksearch"
				placeholder="JFORMS_FILTER_NULL_NAME_DESCRIPTION"
				label="JFORMS_JSEARCH_NAME_DESCRIPTION"
				class="element-search search-query"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"/>
	</fieldset>

</form>