<?xml version="1.0" encoding="utf-8"?>


<form>
<fieldset name="cot_admin.details"
		label="OBSERVATION_ADMIN_REPORT"
		printable="true"
		addfieldpath="/libraries/jdom/jform/fields"
		>
	<field name="id"
			alias="id"
			class="form-control"
			label="ID"
			filter="INT"
			description="ID_DESC"
			readonly="true"
			type="cktext"/>
			<!--References-->
			<field name="references"
					alias="references"
					class="form-control"
					label="REFERENCES"
					description="REFERENCES_DESC"
					readonly="true"
					type="text"/>

	<!--id_location-->
	<field name="id_location"
					alias="id_location"
					class="form-control"
					label="ID_LOCATION"
					filter="INT"
					description="ID_DESC"
					readonly="true"
					type="cktext"/>

	<field name="observer_name"
			alias="observer_name"
			class="form-control"
			label="OBSERVER_NAME"
			filter="STRING"
			description="OBSERVER_NAME_DESC"
			required="true"
			hint="OBSERVER_NAME_PL"
			type="text"/>

	<field name="observer_tel"
			alias="observer_tel"
			class="form-control"
			label="OBSERVER_TEL"
			description="OBSERVER_TEL_DESC"
			hint="OBSERVER_TEL"
			type="tel"/>

	<field name="observer_email"
			alias="observer_email"
			class="form-control"
			label="OBSERVER_EMAIL"
			description="OBSERVER_EMAIL_DESC"
			hint="OBSERVER_EMAIL"
			type="email"/>

<!--beginning Informant contacts-->
			<field name="informant_name"
					alias="observer_name"
					class="form-control"
					label="OBSERVER_NAME"
					filter="STRING"
					description="OBSERVER_NAME_DESC"
					required="true"
					hint="OBSERVER_NAME_PL"
					type="text"/>

			<field name="informant_tel"
					alias="observer_tel"
					class="form-control"
					label="OBSERVER_TEL"
					description="OBSERVER_TEL_DESC"
					hint="OBSERVER_TEL"
					type="tel"/>

			<field name="informant_email"
					alias="observer_email"
					class="form-control"
					label="OBSERVER_EMAIL"
					description="OBSERVER_EMAIL_DESC"
					hint="OBSERVER_EMAIL"
					type="email"/>
<!--end Informant contacts-->

	<field name="observation_datetime"
			alias="observation_datetime"
			class="form-control form-calendar"
			label="OBSERVATION_DATE"
			description="OBSERVATION_DATE_DESC"
			hint="OBSERVATION_DATE"
			type="ckcalendar"
            default="NOW"
            format="Y-m-d"/>

	<field name="observation_date"
			alias="observation_date"
			class="form-control"
			label="OBSERVATION_DATE"
			description="OBSERVATION_DATE_DESC"
			hint="OBSERVATION_DATE"
			type="text"/>

	<field name="observation_day"
			alias="observation_day"
			class="form-control"
			label="OBSERVATION_DAY"
			description="OBSERVATION_DAY_DESC"
			hint="OBSERVATION_DAY"
			type="text"/>

	<field name="observation_month"
			alias="observation_month"
			class="form-control"
			label="OBSERVATION_MONTH"
			description="OBSERVATION_MONTH_DESC"
			hint="OBSERVATION_MONTH"
			type="text"/>

	<field name="observation_year"
			alias="observation_year"
			class="form-control"
			label="OBSERVATION_YEAR"
			description="OBSERVATION_CULLED_DESC"
			hint="OBSERVATION_YEAR"
			type="text"/>

		<field name="observation_location"
			alias="observation_location"
			class="form-control"
			label="OBSERVATION_LOCATION"
			filter="STRING"
			description="OBSERVATION_LOCATION_DESC"
			hint="OBSERVATION_LOCATION"
			type="textarea"/>

		<field name="observation_localisation"
				alias="observation_localisation"
				label="OBSERVATION_PICK"
				description="OBSERVATION_PICK_DESC"
				filter="STRING"
				class="formatted_address form-control"
				type="ckaddresspicker"/>

		<field name="observation_region"
				alias="region"
				label="OBSERVATION_REGION"
				description="OBSERVATION_REGION_DESC"
				filter="STRING"
				class="region form-control"
				hint="OBSERVATION_REGION"
				type="text"/>

		<field name="observation_country"
				alias="country"
				label="OBSERVATION_COUNTRY"
				description="OBSERVATION_COUNTRY_DESC"
				filter="STRING"
				class="country form-control"
				hint="OBSERVATION_COUNTRY"
				type="text"/>

		<field name="observation_country_code"
				readonly="true"
				alias="country_code"
				label="OBSERVATION_COUNTRY_CODE"
				description="OBSERVATION_COUNTRY_CODE_DESC"
				filter="STRING"
				class="country_code form-control"
				hint="OBSERVATION_COUNTRY_CODE"
				type="text"
				/>

		<field name="observation_latitude"
				alias="latitude"
				label="OBSERVATION_LATITUDE"
				description="OBSERVATION_LATITUDE_DESC"
				filter="FLOAT"
				class="latitude form-control"
				hint="OBSERVATION_LATITUDE"
				type="text"/>

		<field name="observation_longitude"
				alias="longitude"
				label="OBSERVATION_LONGITUDE"
				description="OBSERVATION_LONGITUDE_DESC"
				hint="OBSERVATION_LONGITUDE"
				filter="FLOAT"
				class="longitude form-control"
				type="text"/>

<!--Number-->
	<field name="observation_mammal_number"
			alias="observation_mammal_number"
			class="form-control"
			label="OBSERVATION_MAMMAL_NUMBER"
			description="OBSERVATION_MAMMAL_NUMBER_DESC"
			hint="OBSERVATION_MAMMAL_NUMBER"
			labelclass="control-label"
			type="cktext"/>
<!--Size-->
	<field name="observation_mammal_size"
				 alias="observation_mammal_size"
				 class="sizes form-control"
				 label="OBSERVATION_SIZES"
				 description="OBSERVATION_SIZES_DESC"
				 hint="OBSERVATION_SIZES"
				 labelclass="control-label"
				 type="text"/>
<!--Sexe-->
<field name="observation_mammal_sex"
			alias="observation_mammal_sex"
			class="sizes form-control"
			label="OBSERVATION_MAMMAL_SEX"
			description="OBSERVATION_MAMMAL_SEX_DESC"
			hint="OBSERVATION_MAMMAL_SEX"
			labelclass="control-label"
			type="checkboxes"
			required="true"
			multiple="false">
			<option value="mal">OBSERVATION_GENDER_A</option>
			<option value="femal">OBSERVATION_GENDER_B</option>
			<option value="unknown">OBSERVATION_GENDER_C</option>
		</field>
<!--Spaces-->
	<field name="observation_mammal_spaces"
				 alias="observation_mammal_spaces"
				 class="sizes form-control"
				 label="OBSERVATION_MAMMAL_SIZE"
				 description="OBSERVATION_MAMMAL_SIZE_DESC"
				 hint="OBSERVATION_MAMMAL_SIZE"
				 labelclass="control-label"
				 type="text"/>
<!--Spaces identification-->
<field name="observation_mammal_spaces_identification"
			alias="observation_mammal_spaces_identification"
			class="sizes form-control"
			label="OBSERVATION_MAMMAL_SPACES_IDENTIFICATION"
			description="OBSERVATION_MAMMAL_SPACES_IDENTIFICATION_DESC"
			hint="OBSERVATION_MAMMAL_SPACES_IDENTIFICATION"
			labelclass="control-label"
			type="checkboxes"
			required="true"
			multiple="false">
			<option value="probable">OBSERVATION_IDENTIFICATION_A</option>
			<option value="certain">OBSERVATION_IDENTIFICATION_B</option>
		</field>
<!--Abnormalities-->
<field name="observation_abnormalities"
			 alias="observation_abnormalities"
			 class="abnormalities form-control"
			 label="OBSERVATION_ABNORMALITIES"
			 descrtiption="OBSERVATION_ABNORMALITIES_DESC"
			 hint="OBSERVATION_ABNORMALITIES"
			 labelclass="control-label"
			 type="text"/>
<!--Levies -->
<field name="observation_levies"
			 alias="observation_levies"
			 class="levies form-control"
			 label="OBSERVATION_MAMMAL_LEVIES"
			 descrtiption="OBSERVATION_MAMMAL_LEVIES_DESC"
			 hint="OBSERVATION_MAMMAL_LEVIES"
			 labelclass="control-label"
			 type="text"/>
<!--State-->
<field name="observation_mammal_state"
			 alias="observation_mammal_state"
			 class="state form-control"
			 label="OBSERVATION_MAMMAL_STATE"
			 description="OBSERVATION_MAMMAL_STATE_DESC"
			 hint="OBSERVATION_MAMMAL_STATE"
			 type="text"/>
<!--State decomposition-->
<field name="observation_mammal_state"
			 alias="observation_mammal_state"
			 class="state form-control"
			 label="OBSERVATION_MAMMAL_STATE_DECOMPOSITION"
			 description="OBSERVATION_MAMMAL_STATE_DECOMPOSITION_DESC"
			 hint="OBSERVATION_MAMMAL_STATE_DECOMPOSITION"
			 type="text"/>

	<field name="observation_culled"
			alias="observation_culled"
			class="form-control"
			label="OBSERVATION_CULLED"
			labelclass="control-label"
			description="OBSERVATION_CULLED_DESC"
			hint="OBSERVATION_CULLED"
			type="text"/>

	<field name="observation_method"
			alias="observation_method"
			class="form-control"
			label="OBSERVATION_METHOD"
			description="OBSERVATION_METHOD_DESC"
			type="checkboxes"
			required="true"
			multiple="true" >
		<option value="snorkelling">OBSERVATION_METHOD_A</option>
		<option value="scuba diving">OBSERVATION_METHOD_B</option>
	</field>

	<field name="counting_method_timed_swim"
			alias="counting_method_timed_swim"
			class="form-control"
			type="text"
			labelclass="control-label"
			label="COUNTING_METHOD_TIMED_SWIM"
			description="COUNTING_METHOD_TIMED_SWIM_DESC"
			hint="COUNTING_METHOD_TIMED_SWIM"/>

	<field name="counting_method_distance_swim"
			alias="counting_method_distance_swim"
			class="form-control"
			type="text"
			labelclass="control-label"
			label="COUNTING_METHOD_DISTANCE_SWIM"
			description="COUNTING_METHOD_DISTANCE_SWIM_DESC"
			hint="COUNTING_METHOD_DISTANCE_SWIM"/>

	<field name="counting_method_other"
			alias="counting_method_other"
			class="form-control"
			type="text"
			labelclass="control-label"
			label="COUNTING_METHOD_OTHER"
			description="COUNTING_METHOD_OTHER_DESC"
			hint="COUNTING_METHOD_OTHER"/>

	<field name="depth_range"
			alias="depth_range"
			class="form-control"
			label="depth_range"
			description="depth_range_DESC"
			type="checkboxes"
			required="true"
			multiple="true" >
		<option value="shallow">DEPTH_RANGE_A</option>
		<option value="medium">DEPTH_RANGE_B</option>
		<option value="deep">DEPTH_RANGE_C</option>
	</field>

	<field name="remarks"
			alias="remarks"
			class="form-control"
			label="REMARKS"
			filter="STRING"
			description="REMARKS_DESC"
			hint="REMARKS_PL"
			type="textarea"/>

	<field name="admin_validation"
			alias="admin_validation"
			class="form-control"
			label="ADMIN_VALIDATION"
			labelclass="control-label"
			description="ADMIN_VALIDATION_DESC"
			type="checkbox"/>

	<field name="captcha" type="captcha"
                label="CAPTCHA"
                description="CAPTCHA_DESC"
                validate="captcha"
                namespace="event"
        />
</fieldset>
</form>
