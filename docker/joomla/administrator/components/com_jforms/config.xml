<config>

	<fieldset name="configuration"
			label="JFORMS_CONFIG_COMPONENT_CONFIGURATION">
				
		<field name="writeFullXmlInLog"
				type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="JFORMS_FIELD_WRITE_FULL_XML_IN_LOG"
				description="JFORMS_FIELD_WRITE_FULL_XML_IN_LOG_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="emptyXmlLogOnScriptExecution"
				type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="JFORMS_FIELD_EMPTY_XML_LOG_ON_SCRIPT_EXECUTION"
				description="JFORMS_FIELD_EMPTY_XML_LOG_ON_SCRIPT_EXECUTION_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
			
		<field 
			name="default_new_submission_status"
			type="list"
			default="confirmed"
			label="JFORMS_FIELD_DEFAULT_NEW_SUBMISSION_STATUS_LABEL"
			description="JFORMS_FIELD_DEFAULT_NEW_SUBMISSION_STATUS_DESC">					
				<option value="na">JFORMS_ENUM_SUBMISSIONS_STATUS_NA</option>
				<option value="pending">JFORMS_ENUM_SUBMISSIONS_STATUS_PENDING</option>
				<option value="confirmed">JFORMS_ENUM_SUBMISSIONS_STATUS_CONFIRMED</option>
				<option value="completed">JFORMS_ENUM_SUBMISSIONS_STATUS_COMPLETED</option>
		</field>
				
		<field name="upload_maxsize"
				label="JFORMS_FIELD_UPLOAD_MAX_SIZE"
				filter="STRING"
				description="JFORMS_FIELD_UPLOAD_MAX_SIZE_INFORMATION"
				type="text"/>
				
		<field name="allowed_images_size"
				label="JFORMS_FIELD_ALLOWED_IMAGES_SIZES"
				filter="STRING"
				default="50x50,200x200"
				placeholder="50x50,200x200"
				class="input-xxlarge"
				description="JFORMS_FIELD_ALLOWED_IMAGES_SIZES_INFORMATION"
				type="text"/>
				
		<field name="tag_step_open"
				label="JFORMS_FIELD_TAG_STEP_OPEN"
				filter="STRING"
				default="step"
				placeholder="step"
				description="JFORMS_FIELD_TAG_STEP_OPEN_DESC"
				type="text"/>
				
		<field name="tag_step_close"
				label="JFORMS_FIELD_TAG_STEP_CLOSE"
				filter="STRING"
				default="/step"
				placeholder="/step"
				description="JFORMS_FIELD_TAG_STEP_CLOSE_DESC"
				type="text"/>
				
		<field name="tag_fset_open"
				label="JFORMS_FIELD_TAG_FSET_OPEN"
				filter="STRING"
				default="fset"
				placeholder="fset"
				description="JFORMS_FIELD_TAG_FSET_OPEN_DESC"
				type="text"/>
				
		<field name="tag_fset_close"
				label="JFORMS_FIELD_TAG_FSET_CLOSE"
				filter="STRING"
				default="/fset"
				placeholder="/fset"
				description="JFORMS_FIELD_TAG_FSET_CLOSE_DESC"
				type="text"/>
	</fieldset>

