<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_JFORMS</name>
	<description>PLG_SYSTEM_JFORMS_XML_DESCRIPTION</description>
	<version>0.0.4</version>
	<creationDate>21 June 2014</creationDate>
	<author>Girolamo Tomaselli</author>
	<authorEmail>girotomaselli@gmail.com</authorEmail>
	<authorUrl>http://bygiro.com</authorUrl>
	<copyright>Copyright Â© 2014 G. Tomaselli All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<files>
		<filename plugin="jforms">jforms.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	
	<languages folder="language/en-GB">
		<language tag="en-GB">en-GB.plg_system_jforms.ini</language>
		<language tag="en-GB">en-GB.plg_system_jforms.sys.ini</language>
	</languages>
	
	<!-- Parameters -->
	<config>
		<fields name="params">
			<fieldset name="basic">

				<field name="tag_open"
						label="PLG_SYSTEM_JFORMS_FIELD_TAG_OPEN"
						filter="STRING"
						default="jforms"
						placeholder="jforms"
						description="PLG_SYSTEM_JFORMS_FIELD_TAG_OPEN_DESC"
						type="text"/>
						
				<field name="tag_close"
						label="PLG_SYSTEM_JFORMS_FIELD_TAG_CLOSE"
						filter="STRING"
						default="/jforms"
						placeholder="/jforms"
						description="PLG_SYSTEM_JFORMS_FIELD_TAG_CLOSE_DESC"
						type="text"/>
						
				<field type="spacer" label="PLG_SYSTEM_JFORMS_HOW_IT_WORKS" />
			</fieldset>
		</fields>
	</config>
</extension>
